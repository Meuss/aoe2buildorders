html {
  background: #333;
}
body {
  background: #333;
  .navbar,
  aside.sidebar,
  .navbar .links {
    background: #333;
  }
  a,
  .navbar .site-name,
  .sidebar-group,
  .sidebar-link {
    color: #3eaf7c;
  }
}
body h1,
body h2,
body h3,
body p,
body .home .hero .description,
.home .footer,
li,
li a.sidebar-link {
  color: #f1f1f1;
}
body .home .hero .action-button {
  background-color: #222;
  border-bottom: 1px solid #111;
}
body .home .hero .action-button:hover {
  background-color: #1b1b1b;
}
.row {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: stretch;
  justify-content: space-between;
}
.col {
  flex-grow: 1;
  flex-basis: 48%;
  max-width: 48%;
}
.col-3 {
  flex-grow: 1;
  flex-basis: 30%;
  max-width: 30%;
}
body .theme-default-content:not(.custom),
body .page-nav {
  max-width: 900px;
}